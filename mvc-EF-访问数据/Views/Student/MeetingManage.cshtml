
<div id="content-header">
    <h1><i class="glyphicon glyphicon-user"></i>会议管理</h1>
    <div class="btn-group">
        <button id="addMeetingModal" class="btn btn-default"><span class="text">添加</span><i class="glyphicon glyphicon-export"></i></button>
    </div>
</div>


<div class="modal fade" id="MeetingModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"> 添加会议</h4>
            </div>
            <form id="MeetingBodyForm">
                <div class="modal-body">


                    <div>
                        <div class="form-group form-section">
                            <label for="MeetingTitle" class="pull-left">1("主题：")</label>
                            @Html.TextBox("MeetingTitle", "", new { @id = "MeetingTitle", @class = "form-text form-control" })
                            @Html.ValidationMessage("MeetingTitle")
                        </div>
                        <div class="form-group form-section">
                            <label for="MeetingSpeaker" class="pull-left">1("讲者：")</label>
                            @Html.TextBox("MeetingSpeaker", "", new { @id = "MeetingSpeaker", @class = "form-text form-control" })
                            @Html.ValidationMessage("MeetingSpeaker")
                        </div>
                        <div class="form-group form-section">
                            <label for="MeetingTime" class="pull-left">1("时间：")</label>
                            @Html.TextBox("MeetingTime", "", new { @id = "MeetingTime", @class = "form-text form-control" })
                            <span class="add-on"><i class="icon-th"></i></span>
                            @Html.ValidationMessage("MeetingTime")
                        </div>
                        <div class="form-group form-section">
                            <label for="MeetingDescription" class="pull-left">1("介绍：")</label>
                            @Html.TextBox("MeetingDescription", "", new { @id = "MeetingDescription", @class = "form-text form-control" })
                            @Html.ValidationMessage("MeetingDescription")
                        </div>
                        <div class="form-group form-section">
                            <label for="MeetingLink" class="pull-left">1("链接：")</label>
                            @Html.TextBox("MeetingLink", "", new { @id = "MeetingLink", @class = "form-text form-control" })
                            @Html.ValidationMessage("MeetingLink")
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal">取消</button>
                    <button id="btnInsert" type="submit" class="btn btn-primary">確定生成</button>
                </div>
            </form> 
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    $(function () {
        $("#addMeetingModal").bind("click", function () {
            $('#MeetingModal').modal('toggle');
        })
        $("#MeetingTime").datetimepicker({
            format: "dd MM yyyy - hh:ii",
            autoclose: true,
            todayBtn: true,
            pickerPosition: "bottom-left"
        });
        $('#MeetingBodyForm').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                MeetingTitle: {
                    validators: {
                        notEmpty: {
                            message: '请填写会议主题。'
                        }
                    }
                },
                MeetingSpeaker: {
                    validators: {
                        notEmpty: {
                            message: '请填写会议讲者。'
                        }
                    }
                },
                MeetingTime: {
                    validators: {
                        notEmpty: {
                            message: '请选择会议时间。'
                        }
                    }
                },
                MeetingDescription: {
                    validators: {
                        notEmpty: {
                            message: '请填写会议描述。'
                        }
                    }
                },
                MeetingLink: {
                    validators: {
                        notEmpty: {
                            message: '请填写会议链接。'
                        }
                    }
                },
            }//fields End
        }).on('success.form.bv', function (e, data) {
            // Prevent form submission
            //e.preventDefault();

            // You can get the form instance
            var $form = $(e.target);

            // and the FormValidation instance
            var fv = $form.data('formValidation');

            // Do whatever you want here ...

            // Use the defaultSubmit() method if you want to submit the form
            // See http://formvalidation.io/api/#default-submit
        });
    })

</script>